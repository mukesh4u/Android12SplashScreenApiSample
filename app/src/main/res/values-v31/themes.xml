<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SplashScreenAPI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Customize your theme here. -->
        <!--        splash screen background color-->
        <item name="android:windowSplashScreenBackground">#FFFFFF</item>
        <!--        provide animatedly drawable-->
        <item name="android:windowSplashScreenAnimatedIcon">
            @drawable/splash_screen_animateable_icon
        </item>
        <!--        max duration is 1000ms-->
        <item name="android:windowSplashScreenAnimationDuration">800</item>
        <!--splash screen branding image-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_gmail_brand</item>
        <!--        icon background color-->
        <item name="android:windowSplashScreenIconBackgroundColor">#004d28</item>
        <!--        <item name="android:windowBackground">@android:color/holo_orange_light</item>-->
    </style>
</resources>